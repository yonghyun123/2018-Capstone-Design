<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nabak.nabakalarm"
    android:versionCode="4"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="7" />

    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 광고 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:debuggable="true"
        android:icon="@drawable/nabakalarmtitle"
        android:label="삼조한김"
        android:testOnly="true" >
        <activity
            android:name="nabak.nabakalarm.NabakAlarmActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="nabak.nabakalarm.alarm"
            android:screenOrientation="portrait" />
        <activity
            android:name="nabak.nabakalarm.alarmSet"
            android:screenOrientation="portrait" />
        <activity
            android:name="nabak.nabakalarm.afternoonAlarm"
            android:screenOrientation="portrait" />
        <activity
            android:name="nabak.nabakalarm.alarmReceiver"
            android:screenOrientation="portrait" />
        <activity
            android:name="nabak.nabakalarm.alarmReceiver2"
            android:screenOrientation="portrait" />
        <!-- 광고 -->
        <activity android:name="com.nbpcorp.mobilead.sdk.MobileAdBrowserActivity" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="nabak.nabakalarm.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>